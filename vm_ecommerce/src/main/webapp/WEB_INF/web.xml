<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"  
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee  
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"  
         version="3.1">  


    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.projectwork.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TrackServlet</servlet-name>
        <servlet-class>com.projectwork.TrackServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TrackServlet</servlet-name>
        <url-pattern>/vm_music/tracks</url-pattern>
    </servlet-mapping>

     <servlet>
        <servlet-name>CarrelloServlet</servlet-name>
        <servlet-class>com.projectwork.CarrelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CarrelloServlet</servlet-name>
        <url-pattern>/vm_music/carrello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DettaglioTrackServlet</servlet-name>
        <servlet-class>com.projectwork.DettaglioTrackServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DettaglioTrackServlet</servlet-name>
        <url-pattern>/vm_music/tracks/track</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/img/*</url-pattern>
    </servlet-mapping>





</web-app>